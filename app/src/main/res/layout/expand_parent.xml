<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/parant_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/busName"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="20dp" />

    <View
        android:id="@+id/split1"
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:id="@+id/busInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignLeft="@id/split1">

        <TextView
            android:id="@+id/startStation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/busTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/split1"
            android:layout_margin="10dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/busButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
    <ImageView
        android:id="@+id/switchStation"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/switchbg"/>
    <ImageView
        android:id="@+id/refreshStation"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_alignLeft="@id/switchStation"
        android:background="@drawable/refresh"/>
    </LinearLayout>
</LinearLayout>
